{
    "name": "hourly-possum",
    "version": "1.0.0",
    "description": "relay twitter.com/PossumEveryHour to Discord channels",
    "main": "build/index.js",
    "author": "Carter Himmel <me@fyko.net>",
    "license": "Apache-2.0",
    "scripts": {
        "build": "pnpm run cleardir && pnpm run compile",
        "cleardir": "rimraf build/*",
        "compile": "tsc",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --fix --ext .ts",
        "start": "pnpm run build && node ."
    },
    "dependencies": {
        "cheerio": "^1.0.0-rc.3",
        "discord.js": "github:discordjs/discord.js",
        "node-fetch": "^2.6.0"
    },
    "devDependencies": {
        "@types/cheerio": "^0.22.16",
        "@types/node": "^12.12.21",
        "@types/node-fetch": "^2.5.5",
        "@types/ws": "^6.0.4",
        "@typescript-eslint/eslint-plugin": "^2.12.0",
        "@typescript-eslint/parser": "^2.12.0",
        "eslint": "^6.8.0",
        "eslint-config-marine": "^5.3.2",
        "eslint-config-prettier": "^6.7.0",
        "eslint-plugin-prettier": "^3.1.2",
        "prettier": "^1.19.1",
        "rimraf": "^3.0.0",
        "tslib": "^1.11.1",
        "typescript": "^3.7.4"
    },
    "optionalDependencies": {
        "bufferutil": "^4.0.1",
        "erlpack": "github:discordapp/erlpack",
        "utf-8-validate": "^5.0.2",
        "zlib-sync": "^0.1.6"
    },
    "eslintConfig": {
        "extends": "marine/prettier/node",
        "rules": {
            "comma-dangle": [
                "error",
                "always-multiline"
            ]
        }
    }
}
